<Window x:Class="EmailSenderWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmailSenderWPF"
        xmlns:userControls="clr-namespace:EmailSenderWPF.View.UserControls"
        mc:Ignorable="d"
        Title="Email Sender" Height="500" Width="800">
    <!-- Main Window -->
    <Grid Height="500" Width="800">
        <userControls:WelcomePage x:Name="welcomePage" Visibility="Hidden"></userControls:WelcomePage>
        <userControls:EmailPage x:Name="emailPage" Visibility="Hidden"></userControls:EmailPage>
    </Grid>
</Window>
